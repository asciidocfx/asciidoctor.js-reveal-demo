div.imageblock(id=id,class=["#{style}", "#{role}"],style={"text-align":attr.align ? "text-align: #{attr.align}" : '', float: attr.float ? "float: #{attr.float}" : ''})
    .content
        if attr.link
            a.image(href=attr.link)
                img(src=attr.target,alt=attr.alt,width=attr.width,height=attr.height,style=[attr.background?"background: #{attr.background}":""])
        else
            img(src=attr.target,alt=attr.alt,width=attr.width,height=attr.height,style=[attr.background?"background: #{attr.background}":""])
        if title
            .title !{captioned_title}
